@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Computer-monitor.jpg" alt="monitor" class="img-responsive" />
            <div class="carousel-caption" role="option">
                @if (Context.User.Identity.IsAuthenticated)
                {
                    <p>
                        View and edit the number of monitors in use and in storage. Begin managing now!
                        <a class="btn btn-default" asp-area="" asp-controller="Inventories" asp-action="Index">
                            View Inventory
                        </a>
                    </p>
                }
                else
                {
                    <p>
                        View and edit the number of monitors in use and in storage. Click the button to sign in and begin managing!
                        <a class="btn btn-default" asp-area="" asp-controller="Account" asp-action="Login">
                            Sign in
                        </a>
                    </p>
                }
            </div>
        </div>
        <div class="item">
            <img src="~/images/hdmi.jpg" alt="hdmi cable" class="img-responsive" />
            <div class="carousel-caption" role="option">
                @if (Context.User.Identity.IsAuthenticated)
                {
                    <p>
                        Need an HDMI cable? A converter for a different input type? Click the button to view the inventory!
                        <a class="btn btn-default" asp-area="" asp-controller="Inventories" asp-action="Index">
                            View Inventory
                        </a>
                    </p>
                }
                else
                {
                    <p>
                        Need an HDMI cable? A converter for a different input type? Click the button to sign in first!
                        <a class="btn btn-default" asp-area="" asp-controller="Account" asp-action="Login">
                            Sign in
                        </a>
                    </p>
                }
            </div>
        </div>
        <div class="item">
            <img src="~/images/pingpong1.jpg" alt="pingpong" class="img-responsive" />
            <div class="carousel-caption" role="option">
                @if (Context.User.Identity.IsAuthenticated)
                {
                    <p>
                        Seems like that ping pong table is always out of balls. Click the button to submit a request for more!
                        <a class="btn btn-default" asp-area="" asp-controller="Inventories" asp-action="Index">
                            View Inventory
                        </a>
                    </p>
                }
                else
                {
                    <p>
                        Seems like that ping pong table is always out of balls. Click the button to sign in and see if there are any balls left!
                        <a class="btn btn-default" asp-area="" asp-controller="Account" asp-action="Login">
                            Sign in
                        </a>
                    </p>
                }
            </div>
        </div>
        <div class="item">
            <img src="~/images/power-strip.jpg.838x0_q67_crop-smart.jpg" alt="powerstrip" class="img-responsive" />
            <div class="carousel-caption" role="option">
                @if (Context.User.Identity.IsAuthenticated)
                {
                    <p>
                        Every desk needs power. Click the button to update the inventory.
                        <a class="btn btn-default" asp-area="" asp-controller="Inventories" asp-action="Index">
                            View Inventory
                        </a>
                    </p>
                }
                else
                {
                    <p>
                        Every desk needs power. Click the button to sign in and view the inventory.
                        <a class="btn btn-default" asp-area="" asp-controller="Account" asp-action="Login">
                            Sign in
                        </a>
                    </p>
                }
            </div>
        </div>

        <div class="item">
            <img src="~/images/partyparrotCard.png" alt="PARTY PARROT" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Party hard with Party Parrot.
                    <a class="btn btn-default" href="https://giphy.com/gifs/producthunt-partyparrot-party-parrots-l2Sq0X9PvGJZJ57Uc">
                        Press to Party
                    </a>
                </p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-lg-12 text-center">
        <h2>Purpose of this application</h2>
        <p>We have many different pieces of equipment and other supplies<br />laying around the office, and when things aren't organized, we can lose productivity.<br />Thus, this inventory application was born.</p>

    </div>
